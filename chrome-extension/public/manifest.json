{
  "name": "CondiBook",
  "description": "A bookmark management system",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "64": "logo.png",
    "128": "logo.png"
  },
  "permissions": ["activeTab", "tabs", "storage", "cookies"],
  "manifest_version": 3,
  "version": "0.0.1",
  "host_permissions": ["http://localhost:5001/", "http://localhost:3000/"],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*"]
  },

  "action": {
    "default_popup": "index.html",
    "default_title": "your project title"
  }
}
