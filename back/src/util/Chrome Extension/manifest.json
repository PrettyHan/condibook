{
    "name": "CondiBook",
    "version": "1.0",
    "description": "CondiBook Web Extension",
    "permissions": ["activeTab", "<all_urls>", "tabs", "storage"],
    "content_scripts": [
        {
            "js": ["jquery.min.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_title": "getLink",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/logo.png",
            "32": "/images/logo.png",
            "48": "/images/logo.png",
            "128": "/images/logo.png"
        }
    },
    "icons": {
        "16": "/images/logo.png",
        "48": "/images/logo.png",
        "128": "/images/logo.png"
    },

    "manifest_version": 3
}
